{
  "title": "[External] Windows Like",
  "rules": [
    {
      "description": "[External] left Ctrl to Command",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_control",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_command"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^com\\.microsoft\\.rdc\\.macos$"
              ]
            },
            {
              "type": "device_if",
              "identifiers": [
                {
                  "vendor_id": 2131,
                  "product_id": 512
                }
              ]
            }
          ]
        }
      ]
    },
